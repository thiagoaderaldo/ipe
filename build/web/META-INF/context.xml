<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" 
         displayName="ipe-resource" 
         path="/ipe" 
         reloadable="true">
  <Resource auth="Container" 
            driverClassName="com.mysql.jdbc.Driver" 
            maxActive="10" 
            maxIdle="3" 
            name="jdbc/ipe" 
            password="1" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/ipe" 
            username="ipe"/>
  <Realm className="org.apache.catalina.realm.DataSourceRealm" 
         dataSourceName="jdbc/ipe" 
         debug="99" 
         digest="MD5" 
         localDataSource="true" 
         name="iguana-realm" 
         roleNameCol="grupoId" 
         userCredCol="senha" 
         userNameCol="login" 
         userRoleTable="grupoDoUsuario" 
         userTable="usuarios"/>
</Context>
